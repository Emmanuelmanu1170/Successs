<script>
  function loadOrder() {
    const latestOrder = JSON.parse(localStorage.getItem('latestOrder'));
    const accountName = localStorage.getItem('accountName');
    const orderBox = document.getElementById('orderDetails');

    if (accountName) {
      document.getElementById('welcomeText').innerText = "üëã Welcome back, " + accountName + "!";
    }

    if (latestOrder) {
      orderBox.innerHTML = `
        <h3>Your Latest Order</h3>
        <p><strong>Platform:</strong> ${latestOrder.platform}</p>
        <p><strong>Service:</strong> ${latestOrder.service}</p>
        <p><strong>Quantity:</strong> ${latestOrder.quantity}</p>
        <p><strong>Price (GHS):</strong> ${latestOrder.priceGHS}</p>
        <p><strong>Price (USD):</strong> ${latestOrder.priceUSD}</p>
        <p><strong>Username/Link:</strong> ${latestOrder.username}</p>
        <p><strong>Email:</strong> ${latestOrder.email}</p>
        <p><strong>Phone:</strong> ${latestOrder.phone}</p>
        <p><strong>Reference:</strong> ${latestOrder.reference}</p>
      `;
    } else {
      orderBox.innerHTML = `<p>No recent orders found. Please place an order.</p>`;
    }
  }

  function logout() {
    localStorage.removeItem('latestOrder');
    localStorage.removeItem('accountName');
    window.location.href = 'index.html';
  }

  loadOrder();
</script>

